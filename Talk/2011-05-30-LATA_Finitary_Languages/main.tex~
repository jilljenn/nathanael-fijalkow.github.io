\begin{frame}{Introduction: system specification}
\transdissolve
\begin{itemize}
 \item infinite duration (e.g web server);
 \item discrete time;
 \item open: evolution depends on any number of agents (concurrent system);
 \item agents may be controllable or not.
\end{itemize}
\pause
\begin{itemize}
 \item a finite alphabet $\Sigma$ represent properties;
 \item runs are infinite words;
 \item specification given as a language ($\omega$-regular language);
 \item liveness properties: "something good happens eventually".
\end{itemize}
\end{frame}

\section{Motives for finitary objectives}

\begin{frame}{Classical liveness properties}
A first example, B\"uchi:
\begin{itemize}
 \item a given set of properties appears infinitely often;
\end{itemize}
\pause
\vskip2ex
A second example, parity:
\begin{itemize}
 \item integers are assigned to letters, representing priority;
 \item some integers appear infinitely often;
 \item the least priority appearing infinitely often is even.
\end{itemize}
\end{frame}

\begin{frame}{Drawback}
B\"uchi: $F = \set{v_{2^k} \mid k \in \N}$
\begin{figure}
\begin{center}
\begin{picture}(80,0)(2,0)
	\gasset{Nw=8,Nh=8}

	\node(0)(0,0){$v_0$}
	\node(1)(15,0){$v_1$}
	\drawedge(0,1){}
	\node(2)(30,0){$v_2$}
	\drawedge(1,2){}
	\node[Nframe=n](3)(45,0){}
	\drawedge(2,3){}

	\put(43,-.5){\begin{Huge}$\ldots$\end{Huge}}

	\node[Nframe=n](n-1)(50,0){}
	\node(n)(65,0){$v_n$}
	\drawedge(n-1,n){}
	\node[Nframe=n](n+1)(80,0){}
	\drawedge(n,n+1){}
	\put(78,-.5){\begin{Huge}$\ldots$\end{Huge}}
\end{picture}
\end{center}
\end{figure}
The time until something good happens may be unbounded!
\end{frame}

\begin{frame}{A stronger formulation of liveness: finitary liveness~\cite{AH94}}
Idea: there exists an unknown, fixed bound $b$ such that something good happens within $b$ transitions.
\pause
\vskip2ex
It can be expressed as a finitary operator on languages:
$$\fin(L) = \bigcup \set{M \mid M \textrm{ closed and } \omega \textrm{-regular}, M \subseteq L}$$
\pause
\begin{itemize}
 \item closed: involves Cantor topology;
 \item $\omega$-regular: involves $\omega$-regularity;
 \item restriction operator: $\fin(L) \subseteq L$.
\end{itemize}
\end{frame}

\begin{frame}{Back to example}
Finitary B\"uchi: $F = \set{v_{2^n} \mid n \in \N}$
\begin{figure}
\begin{center}
\begin{picture}(80,0)(2,0)
	\gasset{Nw=8,Nh=8}

	\node(0)(0,0){$v_0$}
	\node(1)(15,0){$v_1$}
	\drawedge(0,1){}
	\node(2)(30,0){$v_2$}
	\drawedge(1,2){}
	\node[Nframe=n](3)(45,0){}
	\drawedge(2,3){}

	\put(43,-.5){\begin{Huge}$\ldots$\end{Huge}}

	\node[Nframe=n](n-1)(50,0){}
	\node(n)(65,0){$v_n$}
	\drawedge(n-1,n){}
	\node[Nframe=n](n+1)(80,0){}
	\drawedge(n,n+1){}
	\put(78,-.5){\begin{Huge}$\ldots$\end{Huge}}
\end{picture}
\end{center}
\end{figure}
\vskip2ex
Not satisfied!
\end{frame}

\section{Characterizations}

\begin{frame}{Describing classical finitary objectives: B\"uchi}
Let $F \subseteq \Sigma$,
$$\bucf = \set{ w \mid \infi(w) \cap F \not= \emptyset}$$
\pause
\vskip1ex
We define:
$$\nextk (w,F) = \inf \set{k'-k \mid k' \geq k, w_{k'} \in F}$$
\pause
\begin{lemma}
$$\fin(\bucf) = \set{w \mid \limsup_k \nextk (w,F) < \infty}$$
\end{lemma}
\end{frame}

\begin{frame}{Describing classical finitary objectives: parity}
Let $p : \Sigma \rightarrow \N$ a priority function,
$$\parp = \set{w \mid \min(p(\infi(w))) \mbox{ is even}}$$
\pause
\vskip1ex
We define:
$$\distk (w,p) = \inf \set{k'-k \mid 
\begin{array}{ll}
k' \geq k, p(w_{k'}) \textrm{ even and } \\
p(w_{k'}) \leq p(w_k)}
\end{array}$$
\pause
\begin{lemma}
$$\fin(\parp) = \set{ w \mid \limsup_k \distk (w,p) < \infty }$$
\end{lemma}
\end{frame}

\begin{frame}{Notations for automata-theoretic characterization}
$$\left \{ \begin{array}{c} D (deterministic) \\ N (non-deterministic) \end{array} \right \} \cdot
\left \{ \begin{array}{c} \varepsilon (classical) \\ F (finitary) \end{array} \right \} \cdot
\left \{ \begin{array}{c} B (BÃ¼chi) \\ P (parity) \end{array} \right \}$$
\end{frame}

